<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="my.notes">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_menu_gallery"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="my.notes.activity.MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="my.notes.activity.AddNoteActivity"
                android:parentActivityName="my.notes.activity.MainActivity">
        </activity>
        <activity android:name="my.notes.activity.EditTagsActivity">
        </activity>
    </application>

</manifest>