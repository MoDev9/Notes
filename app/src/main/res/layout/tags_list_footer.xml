<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lay_drawer_menu_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:clickable="false">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/createLabel"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
    >

        <ImageView android:layout_width="18.5dp"
                   android:layout_height="18.5dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_add_white_24dp"
                   android:tint="#787878"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Create new tag"
                  android:gravity="center"
                  android:textSize="12.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.3dp"
          android:id="@+id/divider1"
          android:background="@color/darkMediumGrey"
          android:layout_below="@id/createLabel"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/archive_group"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/divider1"
    >

        <ImageView android:layout_width="18.5dp"
                   android:layout_height="18.5dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_archive_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Archive"
                  android:gravity="center"
                  android:textSize="12.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/deleted_group"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/archive_group"
    >

        <ImageView android:layout_width="18.5dp"
                   android:layout_height="18.5dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_delete_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Bin"
                  android:gravity="center"
                  android:textSize="12.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.3dp"
          android:id="@+id/divider2"
          android:background="@color/darkMediumGrey"
          android:layout_below="@+id/deleted_group"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/settings_group"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/divider2"
    >

        <ImageView android:layout_width="18.5dp"
                   android:layout_height="18.5dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_settings_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Settings"
                  android:gravity="center"
                  android:textSize="12.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/help_group"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/settings_group"
    >

        <ImageView android:layout_width="18.5dp"
                   android:layout_height="18.5dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_help_outline_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Help &amp; feedback"
                  android:gravity="center"
                  android:textSize="12.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>


</RelativeLayout>