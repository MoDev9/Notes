<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lay_drawer_menu_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

    <include layout="@layout/nav_header_main"
             android:id="@+id/nav_header_main"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="7.5dp"
            android:gravity="center_vertical"
            android:id="@+id/notes_group"
            android:orientation="horizontal"
            tools:background="@drawable/round_corner_rect"
            android:layout_below="@+id/nav_header_main"
    >

        <ImageView android:layout_width="18.5dp"
                   android:layout_height="18.5dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Notes"
                  android:gravity="center"
                  android:textSize="12.5sp"
                  android:textColor="#424242
"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:id="@+id/reminders_group"
            android:orientation="horizontal"
            android:layout_below="@+id/notes_group"
    >

        <ImageView android:layout_width="18.5dp"
                   android:layout_height="18.5dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_alarm_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Reminders"
                  android:gravity="center"
                  android:textSize="12.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:textSize="9sp"
              android:layout_marginStart="28.5dp"
              android:text="TAGS"
              tools:visibility="visible"
              android:id="@+id/label_tag"
              android:layout_below="@+id/reminders_group"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:textSize="9sp"
              android:text="EDIT"
              tools:visibility="visible"
              android:id="@+id/tv_edit"
              android:layout_alignParentEnd="true"
              android:layout_below="@+id/reminders_group"
              android:layout_marginEnd="12dp"
    />

</RelativeLayout>