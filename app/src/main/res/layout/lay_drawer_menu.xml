<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lay_drawer_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="my.notes.activity.MainActivity"
        >

    <include layout="@layout/nav_header_main"
             android:id="@+id/nav_header_main"/>

    <LinearLayout
            android:id="@+id/notes_group"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/nav_header_main"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:background="@drawable/round_corner_rect">

        <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="30dp"
                app:srcCompat="@drawable/ic_lightbulb_outline_black_24dp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Notes"
                android:textColor="#424242
"
                android:textSize="17.5sp" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:id="@+id/reminders_group"
            android:orientation="horizontal"
            android:layout_below="@+id/notes_group"
    >

        <ImageView android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_alarm_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Reminders"
                  android:gravity="center"
                  android:textSize="17.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:textSize="13sp"
              android:layout_marginStart="28.5dp"
              android:text="TAGS"
              tools:visibility="gone"
              android:id="@+id/label_tag"
              android:layout_below="@+id/reminders_group"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/roboto_bold"
              android:textSize="13sp"
              android:layout_marginStart="27dp"
              android:text="EDIT"
              tools:visibility="gone"
              android:id="@+id/tv_edit"
              android:layout_alignParentEnd="true"
              android:layout_below="@+id/reminders_group"
              android:layout_marginEnd="12dp"
    />

    <ListView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/listview"
              tools:visibility="visible"
              android:layout_below="@id/label_tag"
              android:listSelector="@drawable/round_corner_rect"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/createLabel"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/listview"
    >

        <ImageView android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_add_white_24dp"
                app:tint="#787878" />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Create new label"
                  android:gravity="center"
                  android:textSize="17.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:id="@+id/divider1"
          android:background="@color/darkMediumGrey"
          android:layout_below="@id/createLabel"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/archive_group"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/divider1"
    >

        <ImageView android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_archive_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Archive"
                  android:gravity="center"
                  android:textSize="17.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/deleted_group"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/archive_group"
    >

        <ImageView android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_delete_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Bin"
                  android:gravity="center"
                  android:textSize="17.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:id="@+id/divider2"
          android:background="@color/darkMediumGrey"
          android:layout_below="@+id/deleted_group"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/settings_group"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/divider2"
    >

        <ImageView android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_settings_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Settings"
                  android:gravity="center"
                  android:textSize="17.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/help_group"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/settings_group"
    >

        <ImageView android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:layout_marginStart="30dp"
                   app:srcCompat="@drawable/ic_help_outline_black_24dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="15dp"
                  android:text="Help &amp; feedback"
                  android:gravity="center"
                  android:textSize="17.5sp"
                  android:textColor="#424242"
                  android:fontFamily="@font/roboto_medium"
        />

    </LinearLayout>


</RelativeLayout>