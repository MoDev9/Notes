<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/round_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:layout_marginHorizontal="6dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:paddingStart="13dp"
            android:paddingEnd="16dp"
            android:id="@+id/noteContainer"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/note_title"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="17.5sp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                tools:text="Notes from client meeting"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/note_description"
                android:layout_marginTop="3dp"
                tools:maxLines="8"
                android:maxLines="11"
                android:textSize="14.5sp"
                android:ellipsize="end"
                android:fontFamily="@font/opensans_regular"
                tools:text=""
        />

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tags_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            tools:visibility="visible">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8.5dp"
                tools:text="Test1"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"
                android:id="@+id/tag1"
                android:background="@drawable/round_rect_tag"
                android:visibility="gone"
                tools:visibility="visible"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag2"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8.5dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"
                android:background="@drawable/round_rect_tag"
                tools:text="Test2"
                app:layout_constraintStart_toEndOf="@id/tag1"
                android:visibility="gone"
                tools:visibility="visible"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tag3"
                android:gravity="center"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8.5dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"
                android:background="@drawable/round_rect_tag"
                app:layout_constraintStart_toEndOf="@id/tag2"
                tools:text="Test3"
                android:visibility="gone"
                tools:visibility="gone"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="7.5dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"
                android:background="@drawable/round_rect_tag"
                tools:text="7+"
                app:layout_constraintStart_toEndOf="@id/tag2"
                android:visibility="gone"
                tools:visibility="visible"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
