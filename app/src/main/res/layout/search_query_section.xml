<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/search_query_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/content_frame"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="6dp"
            >

        <ImageView
                android:id="@+id/left_action"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintStart_toStartOf="@id/content_frame"
                app:layout_constraintTop_toTopOf="@id/content_frame"
                app:layout_constraintBottom_toBottomOf="@id/content_frame"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_menu_grey_24dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/search_et"
                app:layout_constraintStart_toEndOf="@id/left_action"
                app:layout_constraintEnd_toStartOf="@id/hamburger"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                tools:text="@string/tools_searchBar_text"
                android:hint="Search Notes"
                app:layout_constraintTop_toTopOf="@id/content_frame"
                app:layout_constraintBottom_toBottomOf="@id/content_frame"
                android:imeOptions="actionSearch"
                android:background="@android:color/transparent"
        />

        <ImageView
                android:id="@+id/hamburger"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_more_vert_black_24dp"
                android:onClick="showPopup"
                app:layout_constraintTop_toTopOf="@id/content_frame"
                app:layout_constraintBottom_toBottomOf="@id/content_frame"
                app:layout_constraintEnd_toEndOf="@id/content_frame"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>